<div class="container">
    <div class="row">
        <%= render "layouts/sidebar" %>
        <div class="col-sm-9 col-md-9">
          <h4>Categories</h4>
           <div style="float:right;padding:5px;"><%= link_to 'New category', new_category_path ,:class=>"label label-default"%></div>
<table class="table table-bordered">
            <thead>
             
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    
    <th></th>
  </tr>
  </thead>
            <tbody>
        

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= category.status %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %>
   <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
 </tbody>
</table>

        </div>
    </div>
</div>




