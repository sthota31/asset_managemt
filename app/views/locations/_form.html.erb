  <div class="form-group">
    <%= f.label :parent_location,:class=>"col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.select :location_id, Location.floors.map {|r| [r.name,r.id] },:class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name,:class=>"col-sm-2 control-label"  %>
    <div class="col-sm-4">
     <%= f.text_field :name,:class=>"form-control", :required => true%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location_code ,:class=>"col-sm-2 control-label"  %>
    <div class="col-sm-4">
    <%= f.text_field :location_code,:class=>"form-control" , :required => true%>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :location_type ,:class=>"col-sm-2 control-label"  %>
    <div class="col-sm-4">
            <%= f.select :location_type, Location::LOCATION_TYPES,:class=>"form-control" %>

   
    </div>
  </div>

  
  
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
     <button type="submit" class="btn btn-sm">Submit</button>
  </div>
</div>
